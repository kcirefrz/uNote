<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="uNote.Views.NotesView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    FlyoutLayoutBehavior="Popover"
    IsPresented="False">

    <FlyoutPage.Flyout>
        <ContentPage Title="sfsf">
            <VerticalStackLayout>
                <Label Text="sdfs" />
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Background="#EBF0F6">
                    <VerticalStackLayout Padding="30,50,30,30">
                        <Label
                            FontSize="32"
                            HorizontalTextAlignment="Center"
                            Text="INSIDE THE FLYOUT"
                            TextColor="Black" />

                        <Button
                            Background="#98CCD3"
                            Clicked="BackButton_Clicked"
                            Text="Log out"
                            TextColor="Black" />
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>
