<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:uNote.Models">

    <DataTemplate x:Key="test1" x:DataType="local:OptionItem">
        <ViewCell>
            <Grid ColumnDefinitions="250" RowDefinitions="50">
                <Button
                    Background="Transparent"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill" />

                <HorizontalStackLayout HorizontalOptions="Fill">
                    <Image Margin="0,0,15,0" />

                    <Label Text="Item 01" TextColor="White" />
                </HorizontalStackLayout>
            </Grid>
        </ViewCell>
    </DataTemplate>

    <DataTemplate x:Key="test2" x:DataType="local:OptionItem">
        <ViewCell>
            <HorizontalStackLayout>
                <!--  HorizontalOptions="FillAndExpand"  -->
                <Image Margin="0,0,15,0" />

                <Label Text="Item 01" TextColor="White" />
            </HorizontalStackLayout>
        </ViewCell>
    </DataTemplate>

</ResourceDictionary>
